{% extends 'base.html.twig' %}

{% block title %}New Invoice{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Create New Invoice</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.customer) }}
            {{ form_widget(form.customer, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.customer) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.date) }}
            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.date) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.amount) }}
            {{ form_widget(form.amount, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.amount) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.status) }}
            {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.status) }}
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a href="{{ path('app_invoice_index') }}" class="btn btn-secondary">Back to list</a>
    {{ form_end(form) }}
</div>
{% endblock %} 