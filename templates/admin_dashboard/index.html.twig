{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Admin Dashboard</h1>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Customers</h5>
                    <p class="card-text">Total Customers: {{ customerCount }}</p>
                    <a href="{{ path('app_customer_index') }}" class="btn btn-primary">View Customers</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Invoices</h5>
                    <p class="card-text">Total Invoices: {{ invoiceCount }}</p>
                    <p class="card-text">Paid: {{ paidInvoiceCount }}</p>
                    <p class="card-text">Unpaid: {{ unpaidInvoiceCount }}</p>
                    <p class="card-text">Cancelled: {{ cancelledInvoiceCount }}</p>
                    <a href="{{ path('app_invoice_index') }}" class="btn btn-primary">View Invoices</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 